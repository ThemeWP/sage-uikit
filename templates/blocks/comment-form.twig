<div class="comment-form">
    <h3> add comment </h3>

    <form id="form" class="comment-form" method="post" action="{{ site.url~'/wp-comments-post.php' }}">
        {% if  user %}
            <input type="hidden" name="email" value="{{ user.email }}">
            <input type="hidden" name="author" value="{{ user.name }}">
            <input type="hidden" name="url" value="{{ user.link }}">
        {% else %}
            <div>
                <label for="email"> email </label>
                <input required name="email" class="uk-input" type="text" id="email"/>

                <label for="author"> username </label>
                <input required name="author" class="uk-input" type="text" id="author"/>

                <label for="url"> url </label>
                <input name="url" class="uk-input" id="url" type="text"/>
            </div>
        {% endif %}

        <div>
            <label for="comment"> comment </label>
            <textarea placeholder="comment text" name="comment" class="uk-textarea" cols="60" rows="3" id="comment"></textarea>
        </div>

        <input name="comment_post_ID" value="{{ post.id }}" id="comment_post_ID" type="hidden">
        <input name="comment_parent" id="comment_parent" value="{{ comment.ID|default('0') }}" type="hidden">

        <div>
            <button type="submit" name="Submit" class="uk-button uk-button-default"> Send </button>
            <button type="reset" class="uk-button uk-button-default"> cancel </button>
            <p> Your comment will be revised by the site if needed. </p>
        </div>
    </form>
</div>
